---
import '../../design/src/index.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import MobileNav from '../../design/src/components/MobileNav.astro';
import associationInfo from '../../knowledge/src/association/info.json';

const mobileNavItems = [
  { href: '/', label: 'Adh√©sion', icon: 'person.badge.plus' },
];

interface Props {
  title: string;
  description?: string;
  image?: string;
  showHeader?: boolean;
  showFooter?: boolean;
  noindex?: boolean;
}

const {
  title,
  description = "Rejoignez l'Association Info Evry",
  image = "/og-image.png",
  showHeader = true,
  showFooter = true,
  noindex = false
} = Astro.props;

const siteUrl = associationInfo.sites.join?.url || assoUrl;
const canonicalUrl = new URL(Astro.url.pathname, siteUrl).href;
const ogImageUrl = new URL(image, siteUrl).href;
---

<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <!-- Primary Meta Tags -->
  <title>{title}</title>
  <meta name="title" content={title}>
  <meta name="description" content={description}>
  <meta name="author" content={associationInfo.fullName}>
  <meta name="theme-color" content="#001BA5">
  <meta name="color-scheme" content="dark">
  {noindex && <meta name="robots" content="noindex, nofollow">}

  <!-- Canonical URL -->
  <link rel="canonical" href={canonicalUrl}>

  <!-- Open Graph / Facebook -->
  <meta property="og:type" content="website">
  <meta property="og:url" content={canonicalUrl}>
  <meta property="og:title" content={title}>
  <meta property="og:description" content={description}>
  <meta property="og:image" content={ogImageUrl}>
  <meta property="og:image:width" content="1200">
  <meta property="og:image:height" content="630">
  <meta property="og:locale" content="fr_FR">
  <meta property="og:site_name" content={associationInfo.name}>

  <!-- Twitter -->
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:url" content={canonicalUrl}>
  <meta name="twitter:title" content={title}>
  <meta name="twitter:description" content={description}>
  <meta name="twitter:image" content={ogImageUrl}>

  <!-- Favicon -->
  <link rel="icon" type="image/svg+xml" href="/favicon.svg">
  <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
  <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
  <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
  <link rel="manifest" href="/site.webmanifest">

  <!-- Performance: Preconnect to external origins -->
  <link rel="preconnect" href="https://rsms.me" crossorigin>
  <link rel="dns-prefetch" href="https://rsms.me">

  <!-- Inter Font -->
  <link rel="stylesheet" href="https://rsms.me/inter/inter.css">
</head>
<body>
  {showHeader && <Header />}

  <slot />

  {showFooter && <Footer />}

  <MobileNav items={mobileNavItems} />
</body>
</html>

<style is:global>
/* ===========================================
   Join-Specific Styles
   Styles that extend or override the design system
   =========================================== */

/* Container - narrower for form */
.container {
  max-width: 960px;
  padding: var(--space-8) var(--space-4);
}

/* Header container should use design system defaults */
.header-container.container {
  padding: 0 var(--container-padding);
  max-width: var(--container-max);
}

/* Footer container should be wider */
.footer-container.container {
  max-width: var(--container-max);
}

@media (max-width: 600px) {
  .container {
    padding: var(--space-6) var(--space-4);
  }
}

/* ===========================================
   Button Overrides
   =========================================== */

.btn-primary {
  background: var(--gradient-primary);
  box-shadow: 0 4px 14px rgba(0, 27, 165, 0.4);
}

.btn-primary:hover:not(:disabled) {
  transform: translateY(-2px);
  box-shadow: 0 6px 20px rgba(0, 27, 165, 0.5);
}

.btn-secondary {
  background: transparent;
  border: 1px solid var(--border-default);
  color: var(--color-text);
}

.btn-secondary:hover:not(:disabled) {
  background: rgba(255, 255, 255, 0.05);
  border-color: var(--border-hover);
}
</style>
