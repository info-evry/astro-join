---
import '../../design/src/index.css';
import Head from '../../design/src/components/Head.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import MobileNav from '../../design/src/components/MobileNav.astro';
import associationInfo from '../../knowledge/src/association/info.json';

const mobileNavItems = [
  { href: '#inscription', label: 'Adh√©sion', icon: 'person.badge.plus' },
];

interface Props {
  title: string;
  description?: string;
  image?: string;
  showHeader?: boolean;
  showFooter?: boolean;
  noindex?: boolean;
}

const {
  title,
  description = "Rejoignez l'Association Info Evry",
  image = "og.jpg",
  showHeader = true,
  showFooter = true,
  noindex = false
} = Astro.props;

// Ensure siteUrl has trailing slash for relative URL resolution
const siteUrl = (associationInfo.sites.join?.url || associationInfo.sites.asso.url).replace(/\/?$/, '/');
const canonicalUrl = new URL(Astro.url.pathname, siteUrl).href;
---

<!DOCTYPE html>
<html lang="fr">
<head>
  <Head
    title={title}
    description={description}
    image={image}
    noindex={noindex}
    canonicalUrl={canonicalUrl}
    siteName={associationInfo.name}
    author={associationInfo.fullName}
  />
</head>
<body>
  {showHeader && <Header />}

  <slot />

  {showFooter && <Footer />}

  <MobileNav items={mobileNavItems} />
</body>
</html>

<style is:global>
/* ===========================================
   Join-Specific Styles
   Styles that extend or override the design system
   =========================================== */

/* Container - narrower for form */
.container {
  max-width: 960px;
  padding: var(--space-8) var(--space-4);
}

/* Header container should use design system defaults */
.header-container.container {
  padding: 0 var(--container-padding);
  max-width: var(--container-max);
}

/* Footer container should be wider */
.footer-container.container {
  max-width: var(--container-max);
}

@media (max-width: 600px) {
  .container {
    padding: var(--space-6) var(--space-4);
  }
}

/* ===========================================
   Button Overrides
   =========================================== */

.btn-primary {
  background: var(--gradient-primary);
  box-shadow: 0 4px 14px rgba(0, 27, 165, 0.4);
}

.btn-primary:hover:not(:disabled) {
  transform: translateY(-2px);
  box-shadow: 0 6px 20px rgba(0, 27, 165, 0.5);
}

.btn-secondary {
  background: transparent;
  border: 1px solid var(--border-default);
  color: var(--color-text);
}

.btn-secondary:hover:not(:disabled) {
  background: rgba(255, 255, 255, 0.05);
  border-color: var(--border-hover);
}
</style>
